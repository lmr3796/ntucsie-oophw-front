<% content_for :header_subtitle do %>Homework Submission Status<% end %>
<section>
  <section>
    <p>Hi, <span class="text-info"><%= @email %></span>. This is the administration page.</p>
  </section>
  <section>
    <h4>Submission Status for  
      <%= select_tag :hw_id, options_for_select([['hw5', 'hw5'], ['hw4', 'hw4'], ['hw3', 'hw3'], ['hw2', 'hw2'], ['hw1', 'hw1']]) %>
    </h4>
    <div id="history-loading" style="width:100%; height:100%; position:absolute; background: rgba(255,255,255,0.7)">
      <div id="history-loading-spinner-holder", style="left:50%;"></div>
    </div>
    <p id="history-unavailable" style="display: none">No submission history available.</p>
    <table id="history-table" class="table table-condensed table-hover">
      <thead>
        <tr>
          <th>id</th>
          <th>Git Repo</th>
          <th>Time</th>
          <th># Different Repos</th>
        </tr>
      </thead>
      <tbody id="history-entries">
      </tbody>
    </table>
  </section>
</section>
<%= javascript_include_tag "spin" %>
<%= javascript_include_tag "admin" %>
